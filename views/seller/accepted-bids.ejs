<%- include('../partials/seller/header') %> <%-
include('../partials/seller/navbar') %>

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
        <!-- Topbar -->
        <%- include("../partials/seller/head") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="text-center"><h2>Accepted Bid</h2></div>

            <ul class="nav-pills text-center">
                <% bids.forEach((bid, index)=> {%>
                <li
                    class="col-xl-3 col-lg-3 col-md-3 col-sm-6 nav-item mx-2"
                    style="list-style: none"
                >
                    <a
                        class="nav-link"
                        id="pills-home-tab-<%= index %>"
                        data-toggle="pill"
                        href="#pills-home-<%= index %>"
                        role="tab"
                        aria-controls="pills-home"
                        aria-selected="true"
                        >Property <%= index+1 %></a
                    >
                </li>
                <% }) %>
            </ul>

            <div class="text-center pt-3">
                <img
                    style="width: 150px"
                    src="/images/StandingCount.png"
                    alt=""
                />
            </div>
            <div class="row pt-4">
                <div class="col-xl-4 col-md-4"></div>

                <div
                    class="tab-content col-xl-4 col-md-4 mb-4"
                    id="myTabContent"
                >
                    <% if(typeof properties !== 'undefined'){%>
                        <% bids.forEach((bid, index)=> { %>

                    <div
                        class="tab-pane fade"
                        id="pills-home-<%= index %>"
                        role="tabpanel"
                        aria-labelledby="pills-home-tab-<%= index %>"
                    >
                        <div class="card">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div>
                                        <h2>
                                            <%= bid.agentId.commision %>%
                                        </h2>
                                    </div>
                                    <div class="col-auto pl-3">
                                        <img
                                            style="
                                                width: 70px;
                                                border-radius: 50%;
                                                border: 1px solid lightgray;
                                            "
                                            src="/images/StandingCount.png"
                                            alt=""
                                        />
                                    </div>
                                    <div class="col mr-2 pl-4">
                                        <div
                                            class="text-xs font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            <%= bid.agentId.name %>
                                        </div>
                                        <div
                                            class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            <%= bid.agentId.brokeragePhone %>
                                        </div>
                                        <div
                                            class="text-xl pt-2 font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            *****
                                        </div>
                                        <div
                                            class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            51 total reviews (23 local)
                                        </div>
                                    </div>
                                    <div>
                                        <a
                                            href="/seller/agent-chat"
                                            class="btn btn-primary btn-sm"
                                            >Chat</a
                                        >
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
 <% } %>
                </div>
                <div class="col-xl-4 col-md-4"></div>
            </div>
        </div>
        <!-- /.container-fluid -->

        <!-- End of Main Content -->

        <!-- End of Page Wrapper -->

        <%- include('../partials/seller/footer') %>
    </div>
    <%- include('../partials/seller/scripts') %>
    <script src="/js/seller/accepted.js"></script>
</div>
