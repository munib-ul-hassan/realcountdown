<%- include('../partials/seller/header') %> <%-
include('../partials/seller/navbar') %>

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
  <!-- Main Content -->
  <div id="content">
    <!-- Topbar -->
    <%- include('../partials/seller/head') %>
    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 card p-3">
          <h4 class="text-center">My Profile</h4>
          <form action="/seller/edit-profile" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Name </label>
              <input type="text" class="form-control" id="exampleInputEmail1"
              name="name" aria-describedby="emailHelp" value="<%= locals.name ?
              name : "" %>" required />
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control"
              id="exampleInputPassword1" required value="<%= user.password ?
              user.password : "" %>" readonly disabled />
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Email</label>
              <input type="email" class="form-control" id="email" readonly
              disabled required value="<%= user.email ? user.email : "" %>"/>
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Number</label>
              <input type="text" class="form-control" id="number" name="phone"
              value="<%= user.phone ? user.phone: "" %>" required />
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>

        <div class="col-md-6 card p-3">
          <h4 class="text-center">Change Password</h4>
          <form action="/seller/change-password-image" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Password </label>
              <input type="password" class="form-control"
              id="exampleInputEmail1" aria-describedby="emailHelp" value="<%=
              user.password ? user.password : "" %>" required readonly disabled
              />
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">New Password</label>
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                name="password"
                required
              />
            </div>
            <div
              style="
                display: flex;
                justify-content: center;
                align-items: center;
              "
            >
              <img class="img-profile rounded-circle" id="img-profile" <%
              if(locals.image == "" || locals.image == "/images/"){ %>
              src="/img/undraw_profile.svg" <% }else{ %> src="<%= image %>" <% }
              %> /> <input type="hidden" name="image" id="image-text" <%
              if(locals.image == "" || locals.image == "/images/"){ %>
              value="/img/undraw_profile.svg" <% }else{ %> value="<%= image %>"
              <% } %>>
            </div>
            <h3 class="text-center">Do you want to choose profile</h3>
            <div class="text-center">
              <button
                type="button"
                class="btn btn-outline-info"
                data-toggle="modal"
                data-target="#exampleModalCenter"
              >
                Choose Profile
              </button>
            </div>
            <div class="text-center mt-4">
              <button
                type="submit"
                class="btn btn-primary"
                data-toggle="modal"
                data-target="#exampleModalCenter"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- /.container-fluid -->
  </div>
  <!-- End of Main Content -->
  <style>
    .setprofile {
      height: 140px;
    }
  </style>
  <div
    style="padding-left: 270px"
    class="modal fade"
    id="exampleModalCenter"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true"
  >
    <div id="hide" class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div>
          <h5 class="p-3">
            <div>
              Select profile <br /><br />

              <div id="textbox">
                <img src="/images/prfile1.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile2.jpg" class="" alt="" />&nbsp; <br />
                <img src="/images/profile4.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile5.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile6.jpg" class="" alt="" />&nbsp;
              </div>
              <br /><br />
              <div class="text-right">
                <button
                  id="close"
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" id="btn-profile" class="btn btn-primary">
                  Send
                </button>
              </div>
            </div>
          </h5>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Main Content -->
  <%- include('../partials/seller/footer') %>

  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%- include('../partials/seller/scripts') %>
<script src="/js/seller/editProfile.js"></script>

<style>
  img {
    width: 147px;
  }

  .highlighted {
    border: 2px solid #b404ae;
    background-image: url("Green_tick");
  }

  .imageset {
    border-radius: 50%;
    width: 50px;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    -webkit-transition: 0.4s;
    transition: 0.4s;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    -webkit-transition: 0.4s;
    transition: 0.4s;
  }

  input:checked + .slider {
    background-color: #2196f3;
  }

  input:focus + .slider {
    box-shadow: 0 0 1px #2196f3;
  }

  input:checked + .slider:before {
    -webkit-transform: translateX(26px);
    -ms-transform: translateX(26px);
    transform: translateX(26px);
  }

  /* Rounded sliders */
  .slider.round {
    border-radius: 25px;
  }

  .slider.round:before {
    border-radius: 50%;
  }
</style>
