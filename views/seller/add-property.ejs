<%- include('../partials/seller/header') %> 
<%- include('../partials/seller/navbar') %>


<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <%- include('../partials/seller/head') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container fluid">
            <div class="text-center"><h2>Add Property</h2></div>
   <form action="/seller/add-property" method="POST" id="addProperty">
      <div class="form-row">
         <div class="form-group col-md-6">
            <label for="inputPassword4">Property Name</label>
            <input type="text" class="form-control" name="propertyName" placeholder="Property Name" required>
         </div>
         <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control"  required readonly  placeholder="Email" value="<%= email %>">
         </div>
      </div>
      <div class="form-group">
         <label for="inputAddress">Property Address</label>
         <input type="text" class="form-control" name="propertyAddress" id="inputAddress" placeholder="1234 Main St" required>
      </div>
      <div class="form-group">
         <label for="inputAddress2">Mailing Address</label>
         <input type="text" class="form-control" name="mailingAddress" placeholder="Apartment, studio, or floor" required>
      </div>
      <div class="form-row">
         <div class="form-group col-md-6">
            <label for="inputCity">Phone</label>
            <input type="text" class="form-control" name="phone" name="number" required>
         </div>
         <div class="form-group col-md-6 ">
            <label for="inputZip">Zip Code</label>
            <input type="text" class="form-control" name="zipCode" required>
         </div>
      </div>
      <div class="form-group">
         <div class="form-check">
            <input class="form-check-input" type="checkbox" name="listedByBooker">
            <label class="form-check-label" for="gridCheck">
            My Property is not currently listed by any other broker
            </label>
         </div>
      </div>
      <div class="form-group">
         <div class="form-check">
            <input class="form-check-input" type="checkbox" name="agreeToTerms" id="agree" >
            <label class="form-check-label" for="gridCheck">
            Agree to policies 
            </label>
         </div>
      </div>
      <div >
         <button type="submit" class="btn btn-primary btn-md m-1" name="listedForAgent" value="false">Saved Property</button>
         <button type="submit" class="btn btn-primary btn-md m-1" name="listedForAgent" value="true">Save Continue</button>    
      </div>
   </form>
</div>
</div>
</div>
    </div>
 <%- include('../partials/seller/scripts') %>
 <script src="/js/seller/validationAddProperty.js"></script>
    </div>     
     <%- include('../partials/seller/footer') %>

    <style>
        .error{
            font-size: 1rem !important;
            color: rgb(230, 31, 31);
            width: 100%;
        }
    </style>




