<%- include('../partials/buyer/header') %> <%-
include('../partials/buyer/navbar') %>
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
        <!-- Topbar -->
        <%- include("../partials/buyer/head") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="text-center">
                <h2>Waiting Bids</h2>
            </div>
            <% if(waitingBids.length > 0){ %>
            <div class="col-md-12">

                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <% waitingBids.forEach((bid, i) => { %>
                        <li class="nav-item">
                          <a class="nav-link <%= i == 0 ? 'active' : '' %>" id="pills-home-tab" data-toggle="pill" href="#pills-home-<%= i %>" role="tab" aria-controls="pills-home" aria-selected="true">Property <%= i + 1 %></a>
                        </li>
                        <% }) %>
                    </ul>

            </div>
            <div class="tab-content" id="pills-tabContent">
                <% waitingBids.forEach((bid, i) => { %>
                <div class="tab-pane fade <%= i == 0 ? 'show active' : '' %>" id="pills-home-<%= i %>" role="tabpanel" aria-labelledby="pills-home-tab">
                    <div class="row pt-2">
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <img
                                                style="
                                                    width: 70px;
                                                    border-radius: 50%;
                                                    border: 1px solid lightgray;
                                                "
                                                src="/images/StandingCount.png"
                                                alt=""
                                            />
                                        </div>
                                        <div class="col mr-2 pl-4">
                                            <div
                                                class="text-xs font-weight-bold text-success text-uppercase mb-1"
                                            >
                                                <%= bid.agentId.name %>
                                            </div>
                                            <div
                                                class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                            >
                                            <%= bid.agentId.brokeragePhone %>
                                            </div>
                                            <!-- <div
                                                class="text-xl pt-2 font-weight-bold text-success text-uppercase mb-1"
                                            >
                                                *****
                                            </div>
                                            <div
                                                class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                            >
                                                51 total reviews (23 local)
                                            </div> -->
                                        </div>
                                        <div>
                                            <form action="/buyer/accept-bid/<%= bid.agentId._id %>/<%= bid.bidOnProperty %>" >
                                            <button
                                                type="submit"
                                                class="btn btn-primary btn-sm"
                                            >
                                                Accept</button>
                                            </form>
                                            <br /><br />
                                            <form action="/buyer/reject-bid/<%= bid.agentId._id %>/<%= bid.bidOnProperty %>">
                                            <button
                                                type="submit"
                                                class="btn btn-danger btn-sm"
                                            >
                                                Reject
                                            </button>
                                        </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% }else{ %>
                <div class="alert alert-info" role="alert">
                    No Waiting Bids!
                </div>
            <% } %>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- End of Main Content -->
    <%- include('../partials/buyer/footer') %>

    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%- include('../partials/buyer/scripts') %>
