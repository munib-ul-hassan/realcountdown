<%- include('../partials/buyer/header') %> <%-
include('../partials/buyer/navbar') %>
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
        <!-- Topbar -->
        <%- include("../partials/buyer/head") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 card p-3">
                    <h4 class="text-center">My Profile</h4>
                    <form action="/buyer/edit-details/<%= id %>" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name </label>
                            <input
                                type="text"
                                class="form-control"
                                id="exampleInputEmail1"
                                aria-describedby="emailHelp"
                                name="name"
                                value="<%= name %>"
                                required
                                />
                        </div>


                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            <input
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                value="<%= user.email %>"
                                <%= 'disabled' %>
                                required
                            />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Number</label>
                            <input
                                type="text"
                                class="form-control"
                                id="number"
                                name="phone"
                                value="<%= user.phone %>"
                                required
                            />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form action="/buyer/edit-password-picture/<%= id %>" method="POST">
                </div>

                <div class="col-md-6 card p-3">
                    <h4 class="text-center">Change Password</h4>
                    <form>

                        <div class="form-group">
                            <label for="exampleInputPassword1"
                                >New Password</label
                            >
                            <input
                                type="password"
                                class="form-control"
                                id="exampleInputPassword1"
                                name="password"

                                required
                            />
                        </div>
                        <div
                        style="
                          display: flex;
                          justify-content: center;
                          align-items: center;
                        "
                      >
                        <img class="img-profile rounded-circle" id="img-profile" <%
                        if(locals.image == "" || locals.image == "/images/"){ %>
                        src="/img/undraw_profile.svg" <% }else{ %> src="<%= image %>" <% }
                        %> /> <input type="hidden" name="profilePicture" id="image-text" <%
                        if(locals.image == "" || locals.image == "/images/"){ %>
                        value="/img/undraw_profile.svg" <% }else{ %> value="<%= image %>"
                        <% } %>>
                      </div>
                        <h3 class="text-center">
                            Do you want to choose profile
                        </h3>
                        <div class="text-center">
                            <button
                                type="button"
                                class="btn btn-outline-info"
                                data-toggle="modal"
                                data-target="#exampleModalCenter"
                            >
                                Choose Profile
                            </button>
                            <button
                                type="submit"
                                class="btn btn-primary"
                            >
                               Update
                            </button>
                        </div>

                </div>
            </div>
        </div>

        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->
    <style>
        img {
            width: 147px;
        }
        .highlighted {
            border: 2px solid #b404ae;
            background-image: url('Green_tick');
        }
    </style>
    <div
    style="padding-left: 270px"
    class="modal fade"
    id="exampleModalCenter"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true"
  >
    <div id="hide" class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div>
          <h5 class="p-3">
            <div>
              Select profile <br /><br />

              <div id="textbox">
                <img src="/images/prfile1.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile2.jpg" class="" alt="" />&nbsp; <br />
                <img src="/images/profile4.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile5.jpg" class="" alt="" />&nbsp;
                <img src="/images/profile6.jpg" class="" alt="" />&nbsp;
              </div>
              <br /><br />
              <div class="text-right">
                <button
                  id="close"
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" id="btn-profile" class="btn btn-primary">
                  Send
                </button>
              </div>
            </div>
          </h5>
        </div>
      </div>
    </div>
  </div>
</form>
    <!-- End of Main Content -->
    <%- include('../partials/buyer/footer') %>

    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%- include('../partials/buyer/scripts') %>
<script src="/js/editProfile.js"></script>
