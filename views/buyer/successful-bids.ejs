<%- include('../partials/buyer/header') %> <%-
include('../partials/buyer/navbar') %>
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
        <!-- Topbar -->
        <%- include("../partials/buyer/head") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="text-center">
                <h2>Successful Bids</h2>
            </div>
            <% if(bids.length > 0){ %>
            <div class="row pt-2">
                <% bids.forEach(bid => { %>
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <h3
                            class="text-center"
                            style="color: rgb(58, 110, 221)"
                        >
                            Congratulations
                        </h3>
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">

                                    <div
                                        class="text-xs font-weight-bold text-success text-uppercase mb-1"
                                    >
                                        Property Name
                                    </div>

                                    <div
                                        class="text-xs font-weight-bold text-success text-uppercase mb-1"
                                    >
                                        Name
                                    </div>
                                    <div
                                        class="h5 mb-0 font-weight-bold text-gray-800"
                                    >
                                        <%= bid.agentId.name %>
                                    </div>
                                    <div
                                        class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                    >
                                        Commession
                                    </div>
                                    <div
                                        class="h5 mb-0 font-weight-bold text-gray-800"
                                    >
                                        <%= bid.commision %>%
                                    </div>
                                    <div
                                        class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                    >
                                        Status
                                    </div>
                                    <div
                                        class="h5 mb-0 font-weight-bold text-gray-800"
                                    >
                                        Successful
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <img
                                        style="width: 150px"
                                        src="./images/StandingCount.png"
                                        alt=""
                                    />
                                </div>
                                <div>
                                    <a
                                        href="/buyer/invite-on-success/<%= bid.agentId._id %>"
                                        class="btn btn-primary btn-lg"
                                    >
                                        Invite
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% }else{ %>
                <div class="alert alert-info" role="alert">
                   No Accepted Bid until now
                  </div>
            <% } %>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- End of Main Content -->
    <%- include('../partials/buyer/footer') %>

    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%- include('../partials/buyer/scripts') %>
