<%- include("../partials/admin/header") %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include("../partials/admin/navbar") %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include("../partials/admin/top-nav") %>
        <!-- End of Topbar -->
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-6 card p-3">
                <h4 class="text-center">My Profile</h4>
                <form action="/admin/edit-profile" method="POST">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Name </label>
                    <input
                      type="text"
                      class="form-control"
                      id="exampleInputEmail1"
                      aria-describedby="emailHelp"
                      name="name"
                      value="<%= name ? name : "Null" %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="exampleInputPassword1"
                      name="password"
                      readonly
                      required
                      disabled
                      value="<%= password ? password : "Null" %>"
                    />
                  </div>

                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                      Submit
                    </button>
                  </div>
                </form>
              </div>

              <div class="col-md-6 card p-3">
                <h4 class="text-center">Change Password</h4>
                <form action="/admin/change-password" method="POST">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Password </label>
                    <input
                      type="password"
                      class="form-control"
                      id="exampleInputEmail1"
                      aria-describedby="emailHelp"
                      readonly
                      required
                      disabled
                      name="oldPassword"
                      value="<%= password ? password : "Null" %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">New Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="exampleInputPassword1"
                      name="password"
                    />
                  </div>

                  <h3 class="text-center">Do you want to choose profile</h3>
                  <div style="display: flex; justify-content: center; align-items: center;">
                    <img
                    id="profile-pic"
        class="img-profile rounded-circle"
        <% if(locals.image == "" || locals.image == "/images/"){ %>
         src="/img/undraw_profile.svg"
        <% }else{ %>
         src="<%= locals.image %>"
        <% } %>
        class="img-fluid"
        />
                 
                  <input type="hidden" name="imagePath" id="imagePath"   <% if(locals.image == "" || locals.image == "/images/"){ %>
                    value="/img/undraw_profile.svg"
                   <% }else{ %>
                    value="<%= locals.image %>"
                   <% } %>>
                </div >
                  <div class="text-center  mt-4">
                    <button
                      type="button"
                      class="btn btn-primary"
                      data-toggle="modal"
                      data-target="#exampleModalCenter"
                    >
                      Choose Profile
                    </button>
                  </div>
                  <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            </div>

            <div class="row pt-3">
              <div class="col-md-6 card p-3">
                <h4 class="text-center">Create New Admin</h4>
                <form action="/admin/register" method="POST">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Email </label>
                    <input
                      type="email"
                      class="form-control"
                      id="exampleInputEmail1"
                      name="email"
                      required
                      aria-describedby="emailHelp"
                    />
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                      id="exampleInputPassword1"
                      required
                    />
                  </div>

                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                      Submit
                    </button>
                  </div>
                </form>
              </div>

              <div class="col-md-6 card p-3">
                <h4 class="text-center">List of Admin</h4>
                <% if(admins){ %>
                  <div class="table-responsive">
                    <table
                      class="table table-bordered"
                      id="dataTable"
                      width="100%"
                      cellspacing="0"
                    >
                      <thead>
                        <tr>
                        
                          <th>ID</th>
                          <th>Name</th>
                          <th>Email</th>
                        
                        </tr>
                      </thead>

                      <tbody>
                       
                     
                          <% admins.forEach(function(admin, index) { %>
                            
                            <tr>
                            
                            <td><%=  index + 1 %></td>
                            <td><%= admin.name ? admin.name : "null" %></td>
                            <td><%= admin.email ? admin.email : "null" %></td>
                            
                           
                          </tr>
                          
                          <% }) %>
                          
                         
                         
                          
                          
                        
                     
                      </tbody>
                    </table>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
     
        <%- include("../partials/footer") %>

        <!-- Bootstrap core JavaScript-->
      
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <style>
     img{
      width: 147px;
  }
  .highlighted {
    border:2px solid #b404ae;
    background-image: url("Green_tick");
}
  </style>
  <div style="padding-left: 270px;" class="modal fade " id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div id="hide" class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
              
              <div>
                  <h5 class="p-3">
                      <div>
                          Select profile <br><br>
                          

                          <div id="textbox">
                            <img  src="/images/prfile1.jpg"  alt="">&nbsp;
                     <img src="/images/profile.jpg"  alt="">&nbsp;
                     <img src="/images/profile2.jpg"  alt="">&nbsp;
                     <img src="/images/profile4.jpg"  alt="">&nbsp;
                     <img src="/images/profile5.jpg"  alt="">&nbsp;
                     <img src="/images/profile6.jpg"  alt="">&nbsp;
                            </div>  




                          <br><br>
                <div class="text-right">
                  <button
                    id="close"
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    Close
                  </button>
                  <button
                    id="submit-image"
                    type="button"
                    class="btn btn-primary"
                  >
                    Submit
                  </button>
                </div>
              </div>
            </h5>
          </div>
        </div>
      </div>
    </div>
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">Ã—</span>
            </button>
          </div>
          <div class="modal-body">
            Select "Logout" below if you are ready to end your current session.
          </div>
          <div class="modal-footer">
            <button
              class="btn btn-secondary"
              type="button"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <a class="btn btn-primary" href="login.html">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </body>
      
  <%- include("../partials/scripts") %>
  <script src="/js/admin/editProfile.js"></script>
  </html>
