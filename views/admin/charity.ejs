<%- include("../partials/admin/header") %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include("../partials/admin/navbar") %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include("../partials/admin/top-nav") %>
        <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  Entering Countdown
                </h6>
              </div>
              <div class="card-body">

                <div class="table-responsive pt-2">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr class="text-center">

                        <th>Agent Name</th>
                        <th>Registration</th>
                        <th>Amount/Month</th>
                        <th>Chairity Name</th>

                      </tr>
                    </thead>

                    <tbody>
                      <% agents.forEach(agent => { %>
                      <tr class="">

                        <td class="text-center"><%= agent.name %></td>
                        <td class="text-center">Package</td>
                        <td class="text-center">$100/3Month</td>
                        <td class="text-center"><%= agent.charity.firm ? agent.charity.firm : '--' %></td>

                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

          <div class="container-fluid">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  Promotional Message
                </h6>
              </div>
              <div class="card-body">

                <div class="table-responsive pt-2">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr class="text-center">

                        <th>Agent Name</th>
                        <th>Registration</th>
                        <th>Amount/Month</th>
                        <th>Buyer Promotional Messages Charity Name</th>
                        <th>Seller Promotional Messages Charity Name</th>

                      </tr>
                    </thead>

                    <tbody>
                      <% agents.forEach(agent => { %>
                        <tr class="">

                          <td class="text-center"><%= agent.name %></td>
                          <td class="text-center">Package</td>
                          <td class="text-center">$10/Month</td>
                          <td class="text-center"><%= agent.promotionalMessagesBuyer.charityLocation ? agent.promotionalMessagesBuyer.charityLocation : '--' %></td>
                          <td class="text-center"><%= agent.promotionalMessagesSeller.charityLocation ? agent.promotionalMessagesSeller.charityLocation : '--' %></td>

                        </tr>
                        <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>



          <div class="container-fluid">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  Registration
                </h6>
              </div>
              <div class="card-body">

                <div class="table-responsive pt-2">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                  <thead>
                    <tr class="text-center">

                      <th>Agent Name</th>
                      <th>Registration</th>
                      <th>Amount/Month</th>
                      <th>Chairity Name</th>

                    </tr>
                  </thead>
                    <tbody>
                      <% agents.forEach(agent => { %>
                        <tr class="">

                          <td class="text-center"><%= agent.name %></td>
                          <td class="text-center">Package</td>
                          <td class="text-center">$10/Month</td>
                          <td class="text-center"><%= agent.registrationCharity ? agent.registrationCharity : '--' %></td>

                        </tr>
                        <% }) %>
                    </thead>


                  </table>
                </div>
              </div>
            </div>
          </div>


          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

               <!-- End of Main Content -->
               <%- include("../partials/footer") %>

               <!-- Bootstrap core JavaScript-->
             </body>

             <%- include("../partials/scripts") %>
           </html>

