<%- include("../partials/admin/header") %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include("../partials/admin/navbar") %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include("../partials/admin/top-nav") %>
        <!-- End of Topbar -->


          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800 text-center">
              Customize Notification List
            </h1>

            <div class="container-fluid">
              <!-- DataTales Example -->
              <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                  <h6 class="m-0 font-weight-bold text-primary">
                    Customize Notification
                  </h6>
                  <a href="/admin/delete-all-notification" class="btn btn-danger">Delete All</a>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table
                      class="table table-bordered"
                      id="dataTable"
                      width="100%"
                      cellspacing="0"
                    >
                      <thead>
                        <tr class="text-center">

                          <th>ID</th>
                          <th>Notification</th>
                          <th>Date</th>
                          <th>Action</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% Logs.forEach((log, index) => { %>
                        <tr class="text-center">

                          <td><%= index + 1 %></td>
                          <td><%= log.text %></td>
                          <td><%= new Date(log.date).getDate() %>/<%= new Date(log.date).getMonth() %>/<%= new Date(log.date).getFullYear() %> - <%= new Date(log.date).getHours() %>:<%= new Date(log.date).getMinutes() %>:<%= new Date(log.date).getSeconds() %>::<%= new Date(log.date).getMilliseconds() %></td>

                          <td>

                            <form action="/admin/delete-notification/<%= log._id %>">
                            <button
                            class="btn btn-danger"
                            type="submit"
                            />
                           Delete
                          </button>
                            </form>

                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <!-- Content Row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->


               <!-- End of Main Content -->
               <%- include("../partials/footer") %>

               <!-- Bootstrap core JavaScript-->
             </body>

             <%- include("../partials/scripts") %>
           </html>


