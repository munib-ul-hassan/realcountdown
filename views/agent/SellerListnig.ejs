<%- include('../partials/header') %> <%- include('../partials/navbar') %>

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
        <!-- Topbar -->
        <%- include('../partials/head') %>
        <!-- End of Topbar -->
        <!-- Topbar Navbar -->

        <!-- End of Topbar -->

        <!-- search bar country -->

        <div class="container-fluid" style="background-color: cadetblue">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-4 m-2">
                    <div class="input-group">
                        <input
                            type="text"
                            class="form-control bg-light border-0 small"
                            placeholder="Search for zip code"
                            aria-label="Search"
                            aria-describedby="basic-addon2"
                        />
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-fluid">
                <div class="row pt-2">
                    <% sellers.forEach(seller => { %>
                    <div class="col-xl-4 col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <img
                                            style="
                                                width: 70px;
                                                border-radius: 50%;
                                                border: 1px solid lightgray;
                                            "
                                            src="/images/StandingCount.png"
                                            alt=""
                                        />
                                    </div>

                                    <div class="col mr-2 pl-4">
                                        <div
                                            class="text-xs font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            Seller Name
                                        </div>
                                        <div
                                            class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            <%= seller.name %>
                                        </div>
                                        <div
                                            class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            Zip Code
                                        </div>
                                        <div
                                            class="text-xl pt-2 text-success text-uppercase mb-1"
                                        >
                                            <%= seller.zipCode %>
                                        </div>
                                        <div
                                            class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                        >
                                            State
                                        </div>
                                        <div
                                            class="text-xl pt-2 text-success text-uppercase mb-1"
                                        >
                                            <%= seller.state %>
                                        </div>
                                        <!-- <div class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1">
                        51 total reviews (23 local)
                     </div> -->
                                    </div>
                                    <!-- <div>
                          <button type="button" class="btn btn-primary btn-sm">Send</button>
                 </div> -->
                                    <!-- <div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="flexCheckIndeterminate">
  <label class="form-check-label" for="flexCheckIndeterminate">
    Indeterminate checkbox
  </label>
</div> -->
                                    <form
                                        action="/agent/send-promotional-message-seller/<%= messageId %>"
                                        method="POST"
                                    >
                                        <div class="form-check form-switch">
                                            <input
                                                class="form-check-input"
                                                type="checkbox"
                                                name="checked"
                                                value="<%= seller._id %>"
                                                id="flexSwitchCheckDefault"
                                            />
                                            <!-- <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label> -->
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>

            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <style>
            .button1 {
                background-color: white;
                color: black;
                border: 2px solid rgb(0, 81, 255); /* Green */
            }
            .button1:hover {
                background-color: rgb(0, 81, 255);
                color: white;
            }
        </style>
        <div class="m-2 text-right">
            <div class="fixed-bottom" style="padding-right: 100px">
                <span
                    id="days"
                    style="
                        background-color: black;
                        padding: 12px;
                        font-size: 20px;
                        color: white;
                        border-radius: 10px;
                    "
                    >12</span
                >
                <p class="pt-2 text-black-50"></p>
            </div>
            <p class="pt-2 text-black-50"></p>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-10 col-sm-10 col-md-10 col-xl-10 col-xl-10"></div>
            <div class="col-2 col-sm-2 col-md-2 col-xl-2 col-xl-2 text-right">
                <div class="fixed-bottom">
                    <button type="submit" class="btn m-3 btn-lg button1">
                        Next
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
    <%- include('../partials/footer') %>

    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<%- include('../partials/scripts') %>

<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB41DRUbKWJHPxaFjMAwdrzWzbVKartNGg&callback=initMap&libraries=&v=weekly&channel=2"
    async
></script>

<script>
    // Initialize and add the map
    function initMap() {
        // The location of Uluru
        const uluru = { lat: -25.344, lng: 131.036 };
        // The map, centered at Uluru
        const map = new google.maps.Map(document.getElementById('map'), {
            zoom: 4,
            center: uluru,
        });
        // The marker, positioned at Uluru
        const marker = new google.maps.Marker({
            position: uluru,
            map: map,
        });
    }
</script>
