<%- include('../partials/header') %> <%- include('../partials/navbar') %>

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
        <!-- Topbar -->
        <%- include('../partials/head') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->

        <div class="container-fluid">

            <% if(waitingBids.length > 0){ %>
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

                <% waitingBids.forEach((bid, index)=>{ %>
                <li class="nav-item">
                  <a class="nav-link active" id="waiting-<%= bid._id %>" data-toggle="pill" href="#waiting-<%= bid.bidOnProperty %>" role="tab" aria-controls="waiting-<%= bid.bidOnProperty %>" aria-selected="true">Property <%= index+1 %></a>
                </li>
                <% }) %>
              </ul>
              <div class="text-center"><h2>Waiting Bids</h2></div>

              <div class="tab-content" id="pills-tabContent">
                <% waitingBids.forEach((bid, index)=>{ %>
                <div class="tab-pane fade show active" id="waiting-<%= bid.bidOnProperty %>" role="tabpanel" aria-labelledby="waiting-<%= bid._id %>">
                    <div class="col-md-12">
                        <div class="text-center">
                            <div class="row pt-2">

                                <div class="col-xl-4 col-md-6 mb-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div
                                                class="row no-gutters align-items-center"
                                            >
                                                <div class="col-auto">
                                                    <img
                                                        style="
                                                            width: 70px;
                                                            border-radius: 50%;
                                                            border: 1px solid lightgray;
                                                        "
                                                        src="/images/StandingCount.png"
                                                        alt=""
                                                    />
                                                </div>
                                                <div class="col mr-2 pl-4">
                                                    <div
                                                        class="text-xs font-weight-bold text-success text-uppercase mb-1"
                                                    >
                                                        <%= bid.userId.name
                                                        %>
                                                    </div>
                                                    <div
                                                        class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                                    >
                                                        <%= bid.userId.phone
                                                        %>
                                                    </div>

                                                    <% bid.userId.properties.forEach(property => { %>
                                                        <% if(property._id.equals(bid.bidOnProperty)){ %>
                                                            <div
                                                                class="text-xs pt-2 font-weight-bold text-success text-uppercase mb-1"
                                                            >
                                                                <%= property.propertyName %>
                                                            </div>
                                                        <% } %>
                                                    <% }) %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- /.container-fluid -->
                    </div>
                </div>
                <% }) %>
              </div>
            <% }else{ %>
                <div class="alert alert-info" role="alert">
                    No waiting bids!
                  </div>
            <% } %>
            <!-- End of Main Content -->

            <!-- End of Content Wrapper -->
        </div>
    </div>
    <%- include('../partials/footer') %>
    <!-- End of Page Wrapper -->

    <%- include('../partials/scripts') %>
</div>
